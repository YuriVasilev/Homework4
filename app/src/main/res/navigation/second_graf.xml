<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_graf"
    app:startDestination="@id/secondGrafFragment1">

    <fragment
        android:id="@+id/secondGrafFragment1"
        android:name="com.example.fragmentnavigation.SecondGrafFragment1"
        android:label="fragment_second_graf1"
        tools:layout="@layout/fragment_second_graf1" >
        <action
            android:id="@+id/action_secondGrafFragment1_to_secondGrafFragment2"
            app:destination="@id/secondGrafFragment2" />
    </fragment>
    <fragment
        android:id="@+id/secondGrafFragment2"
        android:name="com.example.fragmentnavigation.SecondGrafFragment2"
        android:label="fragment_second_graf2"
        tools:layout="@layout/fragment_second_graf2" >
        <action
            android:id="@+id/action_secondGrafFragment2_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>
    <activity
        android:id="@+id/mainActivity2"
        android:name="com.example.fragmentnavigation.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>